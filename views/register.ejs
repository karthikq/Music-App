<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/header.ejs") -%>
  <body>
    <section id="login-page">
      <div class="login-container">
        <div class="login-contents">
          <div class="login-form">
            <h2>Sign up</h2>
            <%- include("./partials/messages.ejs") -%>

            <form action="/user/register" method="POST">
              <% if(typeof name != "undefined") { %>
              <input
                type="text"
                name="name"
                placeholder="Name"
                value="<%=name%>"
              />
              <%}else{%>
              <input type="text" name="name" placeholder="Name" required />
              <%}%> <% if(typeof email != "undefined") { %>
              <input
                type="text"
                name="email"
                placeholder="Email"
                value="<%=email%>"
              />
              <%}else{%>
              <input type="text" name="email" placeholder="Email" required />
              <%}%>

              <input
                type="password"
                name="password"
                placeholder="Password"
                required
              />
              <input
                type="password"
                name="password2"
                placeholder="Confirm Password"
                required
              />
              <button>
                <span>Register</span>
                <div class="btn-clip"><span>it's free</span></div>
              </button>
            </form>
            <div class="register">
              <p>
                If you already have an account <a href="/user/login">Login</a>
              </p>
            </div>
            <div class="login-social">
              <a href="/auth/facebook">
                <img src="../images/facebook.png" class="fab" alt=""
              /></a>

              <a href="/auth/google">
                <img src="../images/google_plus_red.png" class="fab" alt="" />
              </a>

              <img src="../images/twitter.png" class="fab" alt="" />
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
